  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "description": "Base URL for the Pocker API"
    },
    {
      "key": "roomCode",
      "value": "ABC123",
      "description": "Room code for testing (replace with actual room code)"
    },
    {
      "key": "userId",
      "value": "user-id-here",
      "description": "User ID for testing (replace with actual user ID)"
    },
